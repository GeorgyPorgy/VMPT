<Window x:Name="window" x:Class="Flasher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Flasher"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="253*"/>
        </Grid.ColumnDefinitions>
        <ComboBox x:Name="InterfaceComboBox" HorizontalAlignment="Left" Margin="30,10,0,0" VerticalAlignment="Top" Width="132" Height="22" SelectedIndex="0" ItemsSource="{Binding List}" DisplayMemberPath="Name"/>
        <RichTextBox x:Name="richTextBox" Grid.ColumnSpan="3" HorizontalAlignment="Left" Height="300" Margin="204,10,0,0" VerticalAlignment="Top" Width="303">
            <FlowDocument>
                <Paragraph>
                    <Run Text="RichTextBox"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>

    </Grid>
</Window>
